/* components/searchItem/index.wxss */
.item {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
  border-top: #ddd 2rpx solid;
  border-bottom: #ddd 2px solid;
  box-shadow: 0 4rpx 10rpx rgba(238, 238, 238, .75);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.title {
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.content {
  margin-top: 10rpx;
  color: #333;
  line-height: 42rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.active {
  background: #efefef;
  transition: .3s;
}

.color {
  color: #3498db;
}


.rich-imgs {
  display: flex;
  flex-wrap: wrap;
}

.rich-img {
  width: 100%;
  max-height: 400rpx;
  display: flex;
  justify-content: flex-start;
  overflow: hidden;
  align-items: center;
  justify-content: center;
}


.rich-img image {
  width: 100%;
}


.rich4 .rich-img {
  /* width: 300rpx; */
  width: 48.5%;
  height: 300rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.rich9 .rich-img {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}