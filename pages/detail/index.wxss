/* pages/detail/index.wxss */
.header{
    background: #fff;
    box-shadow: 0 10rpx 10rpx #ddd;
    border-top: #eee 2rpx solid;
}
.head{
    padding: 18rpx 30rpx;
}
.head-title{
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
}
.head-title{
    margin-top: 14rpx;
}
.head-content{
    margin-top: 16rpx;
    color: #333;
    line-height: 42rpx;
    position: relative;
    word-wrap:break-word
}
.head-content-handle{
    width: 100%;
    box-shadow: 0 -60rpx 100rpx #fff;
    height: 80rpx;
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0084ff;
}
.head-content-handle .icon{
    width: 26rpx;
    height: 16rpx;
    margin-left: 10rpx;
    margin-top: 8rpx;
}
.head-content.content-overflow{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.handle{
    border-top: #eee 2rpx solid;
    width: 100%;
    height: 80rpx;
    display: flex;
}
.handle-item{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.handle-follow{
    color: #0084ff;
    border-right: #eee 2rpx solid;
}
.handle-write {
    color: #333;
    display: flex;
    justify-content: center;
}
.handle-write .icon{
    width: 26rpx;
    height: 21rpx;
    margin-right: 10rpx;
}
