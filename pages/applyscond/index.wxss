/* pages/applyFirst/index.wxss */
page {
  background: #fff;
}

.container {
  padding: 20rpx 30rpx;
}

.item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
}

label {
  display: flex;
  width: 240rpx;
}

.input.textarea {
  height: 100rpx;
  width: 380rpx;
}

.item.textarea-wrap {
  align-items: flex-start
}

.submit {
  position: fixed;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #0084ff;
  color: #fff;
  left: 0;
  bottom: 0;
  z-index: 2;
}

.place {
  color: #999;
}

.img {
  width: 28rpx;
  height: 28rpx;
  padding-right: 10rpx
}

.input {
  flex: 1;
  border: 0px;
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  padding-left: 10rpx;
  text-align: right;
}

.input-label {
  width: 40%;
}
