.container {
  box-shadow: 0 4rpx 10rpx rgba(238, 238, 238, .75);
  background: #ffffff;
  border-bottom: #ddd 2rpx solid;
}

.nav-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.nav-item {
  flex: 1;
  text-align: center;
  position: relative;
  padding: 20rpx 0 30rpx 0;
  font-size: 30rpx;
  font-weight: bold;
  color: #777;
}

.nav-proin {
  width: 20rpx;
  height: 4rpx;
  background: none;
  position: absolute;
  left: 50%;
  margin-left: -10rpx;
  bottom: 20rpx;
}

.nav-item.active {
  color: #000;
}

.nav-item.active .nav-proin {
  background: #000
}

.search-wrap {
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.search {
  display: flex;
  height: 54rpx;
  background: #f2f2f2;
  margin: 0 auto;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}
.search .icon {
  margin-left: 20rpx;
}
.search .text {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.add {
  position: fixed;
  right: 20rpx;
  bottom: 80rpx;
  z-index: 100;
  background: #0066FF;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-img {
  width: 40rpx;
  height: 40rpx;
}