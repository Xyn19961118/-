/* pages/user/index.wxss */
.header{
    display: flex;
    width: 100%;
    height: 182rpx;
    background: url(http://m.prizemart.cn/mobile/images/xpic2748.png) no-repeat;
    padding: 24rpx 36rpx;
    box-sizing: border-box;
    align-items: center;
    color: #fff;
}
.header-img{
    width: 114rpx;
    height: 114rpx;
    border: #fff 2rpx solid;
    border-radius: 50%;
}
.header-info{
    margin-left: 20rpx;
}
.header-name{
    font-weight: bold;
    font-size: 32rpx;
    margin-left: 8rpx;
}
.header-grade{
    padding: 0 20rpx;
    font-size: 24rpx;
    background-color: rgba(0,0,0,.4);
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    margin-top: 10rpx;
}
.header-next{
    display: flex;
    margin-left: auto;
    align-items: center;
}
.header-next-pic{
    width: 36rpx;
    height: 36rpx;
}
.header-next-txt{
    font-size: 24rpx;
    margin-right: 8rpx;
}

.user-items{
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
}
.user-item{
  padding-left: 32rpx;
  position: relative;
}
.user-item-wrap{
  padding: 26rpx 30rpx 26rpx 0;
  border-bottom: #eee 2rpx solid;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  align-items: center;
}
.user-items .user-item:last-child .user-item-wrap{
  border-bottom: none;
}
.user-item-icon{
  width: 48rpx;
  height: 48rpx;
  border-radius: 4rpx;
}
.user-item-txt{
  font-size: 28rpx;
  color: #000;
  margin-left: 24rpx;
}
.user-item-prion{
  width: 36rpx;
  height: 36rpx;
  margin-left: auto;
}
.active{
  background: #f5f5f5;
  transition: .3s;
}
.user-num{
  font-size: 24rpx;
  background: #f23;
  color: #fff;
  border-radius: 50%;
  position: absolute;
  right: 74rpx;
  line-height: 40rpx;
  text-align: center;
  width: 40rpx;
  height: 40rpx;
}


.test {
  margin-top: 20rpx;
  width: 100%;
  height: 180rpx;
  background: red;
}