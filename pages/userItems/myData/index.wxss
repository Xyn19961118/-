/* pages/userItems/myData/index.wxss */
.header{
    padding: 42rpx 0;
    background: #fff;
}
.header-center{
    position: relative;
    width: 180rpx;
    height: 180rpx;
    margin: auto;
}
.header-pic{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    border: #eee 2rpx solid;
}
.header-change{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    right: 0;
    bottom: 0;
}
.content{
    margin-top: 20rpx;
    background: #fff;
    border-top: #ddd 2rpx solid;
    border-bottom: #ddd 2rpx solid;
    box-shadow: 0 10rpx 10rpx #eee;
}
.item{
    padding: 22rpx 40rpx;
    border-bottom: #eee 2rpx solid;
    display: flex;
    width: 100%;
    box-sizing: border-box;
    align-items: center;
}
.item label{
    width: 140rpx;
    color: #999;
}
.item-content{
    width: calc(100% - 160rpx);
}
.item-tags{
    display: flex;
    flex-wrap: wrap;
}
.item-tag{
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 32rpx;
    border: #ddd 2rpx solid;
    background: #f8f8f8;
    display: inline-block;
    margin-right: 24rpx;
    margin-bottom: 10rpx;
    position: relative;
}
.item-tag-add{
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 24rpx;
    border: #ddd 2rpx dashed;
}
.submit{
    width: 320rpx;
    height: 76rpx;
    border: 0;
    margin: 180rpx auto 0;
    border-radius: 38rpx;
    background: linear-gradient(to right,#3188f2,#356dff);
    line-height: 76rpx;
    color: #fff;
    font-size: 28rpx;
}
.close{
    position: absolute;
    right: -12rpx;
    top: -12rpx;
    width: 28rpx;
    height: 28rpx;
}