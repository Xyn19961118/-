/* components/userComponents/followPeople/index.wxss */
.items{
    background: #fff;
}
.item{
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    border-bottom: #ddd 2rpx solid;
    width: 100%;
    box-sizing: border-box;
}
.item-pic{
    width: 96rpx;
    height: 96rpx;
    border: #eee 2rpx solid;
    border-radius: 50%;
    margin-right: 18rpx;
}
.item-txt{
    color: #000;
    font-weight: bold;
}
.item-btn{
    width: 134rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    background: #ddd;
    margin-left: auto;
    border: none;
}
.item-btn.active{
    background: #0084ff;
    color: #fff;
}