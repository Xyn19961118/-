/* components/index-article/hot/index.wxss */
.container {
    margin-top: 20rpx;
    background: #fff;
}

.hot-item {
    padding: 20rpx 32rpx;
    display: flex;
    border-bottom: #ddd 2rpx solid;
}

.hot-rank {
    width: 50rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #caa30a;
}

.hot-item:nth-child(1) .hot-rank {
    color: #f03636;
}

.hot-item:nth-child(2) .hot-rank {
    color: #f03636;
}

.hot-item:nth-child(3) .hot-rank {
    color: #f03636;
}

.hot-center {
    flex: 1;
    width: calc(100% - 50rpx);
    position: relative;
}

.hot-pic {
    width: 218rpx;
    height: 164rpx;
    border-radius: 8rpx;
    margin-left: 10rpx;
}

.hot-title {
    color: #000;
    font-weight: bold;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;

}

.hot-content {
    font-size: 24rpx;
    color: #666;
    margin-top: 4rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.hot-number {
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx
}

.active {
    background: #efefef;
    transition: .3s;
}

.content-head-name {
    position: absolute;
    left: 100rpx;
    bottom: 0;
    font-size: 24rpx;
    color: #f00;
}


.topic-top {
    width: 30rpx;
    padding-left: 30rpx;
    position: relative;
    top: 5rpx;
    cursor: pointer;
}