/* components/detail/hot-comment/index.wxss */
.container{
    padding: 24rpx 0;
}
.title{
    color: #000;
    font-size: 32rpx;
    font-weight: bold;
}
.item{
    margin-top: 24rpx;
    display: flex;
}
.item-pic{
    width: 40rpx;
    height: 40rpx;
    border: #eee 2rpx solid;
    border-radius: 50%;
    margin-right: 8rpx;
}
.item-content{
    width: calc(100% - 50rpx);
}
.item-top{
    height: 42rpx;
    display: flex;
    position: relative;
}
.item-name{
    color: #999;
    font-size: 24rpx;
    line-height: 42rpx;
}
.item-like{
    margin-left: auto;
    display: flex;
    align-items: center;
}
.like-pic{
    width: 24rpx;
    height: 24rpx;
}
.like-number{
    font-size: 24rpx;
    margin-left: 4rpx;
    line-height: 42rpx;
}
.look-more{
    color: #999;
    padding: 24rpx 52rpx;
}

.item-delete{
    font-size: 24rpx;
    color: #0084ff;
    position: absolute;
    right: 70rpx;
    top: 8rpx;
}