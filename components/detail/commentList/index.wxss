/* components/detail/commentList/index.wxss */
.container{
    position: fixed;
    width: 100%;
    height: 100%;
    background: #fff;
    left: 0;
    bottom: 0;
    z-index: 10;
}
.header{
    padding: 30rpx;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    height: 90rpx;
    border-top: #eee 2rpx solid;
    border-bottom: #eee 2rpx solid;
    align-items: center;
}
.close{
    width: 24rpx;
    height: 24rpx;
    padding: 10rpx;
}
.header-txt{
    margin-left: 36rpx;
    font-size: 30rpx;
    color: #000;
}
.item{
    border-bottom: #eee 2rpx solid;
}
.discuss{
    position: fixed;
    height: 80rpx;
    border-top: #ddd 2rpx solid;
    background: #fff;
    left: 0;
    bottom: 0;
    width: 100%;
}
.bg{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.4);
    z-index: 9;
}
.wrapper{
    width: 100%;
    height: 1160rpx;
    left: 0;
    bottom: 0;
    z-index: 10;
    position: fixed;
    background: #fff
}