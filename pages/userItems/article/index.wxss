/* components/userComponents/question/index.wxss */
.item {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  border-top: #ddd 2rpx solid;
  border-bottom: #ddd 2px solid;
  box-shadow: 0 4rpx 10rpx rgba(238, 238, 238, .75);
}

.item-info {
  display: flex;
  width: 100%;
  height: 48rpx;
  align-items: center;
}

.item-pic {
  width: 48rpx;
  height: 48rpx;
  border: #eee 2rpx solid;
  border-radius: 50%;
  margin-right: 16rpx;
}

.item-txt {
  color: #999;
  font-weight: bold;
}

.item-title {
  margin-top: 8rpx;
  font-weight: bold;
  color: #333;
  line-height: 42rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-content {
  margin-top: 6rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.item-time {
  color: #999;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.active {
  background: #eee;
  transition: .3s;
}