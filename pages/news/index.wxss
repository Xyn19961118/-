/* pages/news/index.wxss */
page{
    background: #fff;
}
.container{
    border-top: #eee 2rpx solid;
}
.news-item{
    display: flex;
    width: 100%;
}
.news-head{
    width: 128rpx;
    padding-top: 26rpx;
}
.news-head-pic{
    width: 78rpx;
    height: 78rpx;
    border: #eee 2rpx solid;
    border-radius: 50%;
    margin-left: 30rpx; 
}
.news-content{
    flex: 1;
    padding: 26rpx 60rpx 26rpx 0;
    border-bottom: #eee 2rpx solid;
}
.news-name{
    color: #999;
}
.news-title{
    margin-top: 8rpx;
    color: #000;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.news-time{
    font-size: 24rpx;
    color: #999;
    margin-top: 8rpx;
}
.active{
    background: #efefef;
    transition: .3s;
}