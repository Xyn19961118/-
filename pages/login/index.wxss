/* pages/login/index.wxss */
page{
    height: 100%;
    width: 100%;
    overflow: hidden;
}
.container{
    position: relative;
    height: 100%;
}
.bg-pic{
    width: 100%;
    height: 100%;
}
.login-btn{
    position: fixed;
    width: 554rpx;
    height: 76rpx;
    background: linear-gradient(to right,#7bb2f5,#63a8fb);
    bottom: 140rpx;
    left: 50%;
    margin-left: -277rpx;
    border-radius: 40rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 28rpx;
}

.protocol {
    position: fixed;
    left: 100rpx;
    bottom: 80rpx;
    display: flex;
    align-items: center;
    font-size: 24rpx;
}

.protocol-label {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
}

.protocol-link {
    color: #000;
}

.cprotocol {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #fff;
    z-index: 4;
    padding: 20rpx 0 140rpx 0;
    display: none;
  }
  .cprotocol.show {
    display: block;
  }
  .protocol-title {
    font-size: 30rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20rpx;
    color: #333;
  }
  .protocol-sub {
    width: 240rpx;
    height: 68rpx;
    border: #ddd 2rpx solid;
    text-align: center;
    line-height: 68rpx;
    border-radius: 8rpx;
    margin: 26rpx auto;
  }

  .protocol-content {
      padding: 0 30rpx;
  }